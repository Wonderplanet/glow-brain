require 'rails_helper'

describe UserDecorator do
  let(:recored_instance) { FactoryBot.create(:<%= schema["name"].underscore %>) }
  let(:<%= schema["name"].underscore %>) { recored_instance.extend <%= schema["name"] %>Decorator }

  describe "# api_columns" do
    subject { <%= schema["name"].underscore %>.api_columns }

    it do
      <%- schema["params"].each do |p| -%>
      expect(subject).to be_key("<%= p["name"] %>")
      <%- end -%>
    end
  end
end
