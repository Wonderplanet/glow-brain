#!/usr/bin/env bash

# Docker開発環境を操作するためのCLIツールです。
# Laravel Sailをベースにしてます。
# https://github.com/laravel/sail/blob/1.x/bin/sail

# Determine if stdout is a terminal...
if test -t 1; then
    # Determine if colors are supported...
    ncolors=$(tput colors)

    if test -n "$ncolors" && test "$ncolors" -ge 8; then
        BOLD="$(tput bold)"
        YELLOW="$(tput setaf 3)"
        GREEN="$(tput setaf 2)"
        NC="$(tput sgr0)"
    fi
fi

# Function that prints the available commands...
function display_help {
    echo "Laravel Sail${BOLD} (Wonderplanet fork version)${NC}"
    echo
    echo "${YELLOW}Usage:${NC}" >&2
    echo "  sail COMMAND [options] [arguments]"
    echo
    echo "Unknown commands are passed to the docker-compose binary."
    echo
    echo "${YELLOW}docker-compose Commands:${NC}"
    echo "  ${GREEN}sail up${NC}        Start the application"
    echo "  ${GREEN}sail up -d${NC}     Start the application in the background"
    echo "  ${GREEN}sail stop${NC}      Stop the application"
    echo "  ${GREEN}sail restart${NC}   Restart the application"
    echo "  ${GREEN}sail ps${NC}        Display the status of all containers"
    echo
    echo "${YELLOW}Artisan Commands:${NC}"
    echo "  ${GREEN}sail artisan ...${NC}          Run an Artisan command"
    echo
    echo "${YELLOW}PHP Commands:${NC}"
    echo "  ${GREEN}sail php ...${NC}   Run a snippet of PHP code"
    echo "  ${GREEN}sail php -v${NC}"
    echo
    echo "${YELLOW}Composer Commands:${NC}"
    echo "  ${GREEN}sail composer ...${NC}                       Run a Composer command"
    echo
    echo "${YELLOW}Database Commands:${NC}"
    echo "  ${GREEN}sail mysql${NC}     Start a MySQL CLI session within the 'mysql' container"
    echo "  ${GREEN}sail redis${NC}     Start a Redis CLI session within the 'redis' container"
    echo
    echo "${YELLOW}Running Tests:${NC}"
    echo "  ${GREEN}sail check${NC}             Run full check with PHPUnit/PHPStan/PHP_CodeSniffer"
    echo "  ${GREEN}sail test${NC}              Run the PHPUnit tests via the Artisan test command"
    echo "  ${GREEN}sail test --coverage${NC}   Run the PHPUnit tests with coverage"
    echo "  ${GREEN}sail phpunit ...${NC}       Run PHPUnit"
    echo "  ${GREEN}sail phpstan ...${NC}       Run PHPStan"
    echo "  ${GREEN}sail phpcs ...${NC}         Run PHP_CodeSniffer to detect violations"
    echo "  ${GREEN}sail phpcbf ...${NC}        Run PHP_CodeSniffer to fix violations"
    echo "  ${GREEN}sail deptrac ...${NC}       Run Deptrac"
    echo "  ${GREEN}sail deptrac graph ...${NC} Run Deptrac to create dependency graph image"
    echo
    echo "${YELLOW}Container CLI:${NC}"
    echo "  ${GREEN}sail shell${NC}        Start a shell session within the application container"
    echo "  ${GREEN}sail bash${NC}         Alias for 'sail shell'"
    echo "  ${GREEN}sail tinker${NC}       Start a new Laravel Tinker session"
    echo
    echo "${YELLOW}Binaries:${NC}"
    echo "  ${GREEN}sail bin ...${NC}   Run Composer binary scripts from the vendor/bin directory"
    echo
    echo "${YELLOW}Admin Tool:${NC}"
    echo "  ${GREEN}sail admin ...${NC}          Run commands for admin tool container"

    exit 1
}

# Proxy the "help" command...
if [ $# -gt 0 ]; then
    if [ "$1" == "help" ] || [ "$1" == "-h" ] || [ "$1" == "-help" ] || [ "$1" == "--help" ]; then
        display_help
    fi
else
    display_help
fi

# Define Docker Compose command prefix...
docker compose &> /dev/null
if [ $? == 0 ]; then
    DOCKER_COMPOSE=(docker compose)
else
    DOCKER_COMPOSE=(docker-compose)
fi

if [ "$1" == "admin" ]; then
    shift 1

    DOTENV_PATH="$(dirname $0)/../../admin/.env"
    export APP_SERVICE='php-admin'
else
    DOTENV_PATH="$(dirname $0)/../../api/.env"

    # どのphpサービスが起動しているかを判定
    # php-datadog
    if "${DOCKER_COMPOSE[@]}" ps 'php-datadog' 2>&1 | grep -q ' Up '; then
        export DEFAULT_APP_SERVICE='php-datadog'
    else
        export DEFAULT_APP_SERVICE='php'
    fi

    export APP_SERVICE=${APP_SERVICE:-$DEFAULT_APP_SERVICE}
fi

# Source the ".env" file so Laravel's environment variables are available...
if [ -f "${DOTENV_PATH}" ]; then
  source "${DOTENV_PATH}";
fi

# Define environment variables...
export MYSQL_USER=${DB_USERNAME:-root}
export MYSQL_PASSWORD=${DB_PASSWORD:-root}
export MYSQL_DATABASE=${DB_DATABASE:-laravel_wp}
export SCRIPT_DIR=${SCRIPT_DIR:-$(dirname $0)/..}

# Function that outputs Sail is not running...
function sail_is_not_running {
    echo "${BOLD}laravel-wp app is not running.${NC}" >&2
    echo "" >&2
    echo "${BOLD}You may start app using the following commands:${NC} './tools/bin/sail-wp up' or './tools/bin/sail-wp up -d'" >&2

    exit 1
}

EXEC="yes"

if [ -z "$SAIL_SKIP_CHECKS" ]; then
    # Ensure that Docker is running...
    if ! docker info > /dev/null 2>&1; then
        echo "${BOLD}Docker is not running.${NC}" >&2

        exit 1
    fi

    # Determine if Sail is currently up...
    if "${DOCKER_COMPOSE[@]}" ps "$APP_SERVICE" 2>&1 | grep 'Exit\|exited'; then
        echo "${BOLD}Shutting down old Sail processes...${NC}" >&2

        "${DOCKER_COMPOSE[@]}" down > /dev/null 2>&1

        EXEC="no"
    elif [ -z "$("${DOCKER_COMPOSE[@]}" ps -q)" ]; then
        EXEC="no"
    fi
fi

ARGS=()

# Proxy PHP commands to the "php" binary on the application container...
if [ "$1" == "php" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "php" "$@")
    else
        sail_is_not_running
    fi

# Proxy vendor binary commands on the application container...
elif [ "$1" == "bin" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" ./vendor/bin/"$@")
    else
        sail_is_not_running
    fi

# Proxy docker-compose commands to the docker-compose binary on the application container...
elif [ "$1" == "docker-compose" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "${DOCKER_COMPOSE[@]}")
    else
        sail_is_not_running
    fi

# Proxy Composer commands to the "composer" binary on the application container...
elif [ "$1" == "composer" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" "composer" "$@")
    else
        sail_is_not_running
    fi

# Proxy Artisan commands to the "artisan" binary on the application container...
elif [ "$1" == "artisan" ] || [ "$1" == "art" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php artisan "$@")
    else
        sail_is_not_running
    fi

elif [ "$1" == "npm" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" npm "$@")
    else
        sail_is_not_running
    fi

# Proxy the "check" command to the code check script...
elif [ "$1" == "check" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        "${SCRIPT_DIR}/code_check.sh" "$@"
        exit 0
    else
        sail_is_not_running
    fi

# Proxy the "test" command to the "php artisan test" Artisan command...
elif [ "$1" == "test" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -e XDEBUG_MODE=debug,coverage)
        ARGS+=(-e TEST_RECEIPT -e APPSTORE_BUNDLE_ID_PRODUCTION -e APPSTORE_BUNDLE_ID_SANDBOX)
        ARGS+=(-e GOOGLEPLAY_PACKAGE_NAME -e GOOGLEPLAY_PURCHASE_CREDENTIAL -e GOOGLEPLAY_PUBKEY)
        ARGS+=(-e GOOGLEPLAY_PURCHASE_CREDENTIAL_ENV -e GOOGLEPLAY_PUBKEY_ENV)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php artisan test "$@")
    else
        sail_is_not_running
    fi

# Proxy the "phpunit" command to "php vendor/bin/phpunit"...
elif [ "$1" == "phpunit" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec -e XDEBUG_MODE=debug,coverage)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php vendor/bin/phpunit "$@")
    else
        sail_is_not_running
    fi

# Proxy the "phpstan" command to "php vendor/bin/phpstan"...
elif [ "$1" == "phpstan" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php vendor/bin/phpstan analyse --memory-limit=-1 "$@")
    else
        sail_is_not_running
    fi

# Proxy the "phpcs" command to "php vendor/bin/phpcs"...
elif [ "$1" == "phpcs" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php vendor/bin/phpcs --standard=phpcs.xml "$@")
    else
        sail_is_not_running
    fi

# Proxy the "phpcbf" command to "php vendor/bin/phpcbf"...
elif [ "$1" == "phpcbf" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php vendor/bin/phpcbf --standard=phpcs.xml "$@")
    else
        sail_is_not_running
    fi

# Proxy the "deptrac" command to "php vendor/bin/deptrac"...
elif [ "$1" == "deptrac" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)

        if [ "$1" == "graph" ]; then
            "${SCRIPT_DIR}/deptrac_graph.sh" "$@"
            exit 0
        fi
        ARGS+=("$APP_SERVICE" php vendor/bin/deptrac analyse "$@")
    else
        sail_is_not_running
    fi

# Initiate a Laravel Tinker session within the application container...
elif [ "$1" == "tinker" ] ; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" php artisan tinker)
    else
        sail_is_not_running
    fi

# Initiate a MySQL CLI terminal session within the "mysql" container...
elif [ "$1" == "mysql" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=(mysql bash -c)
        ARGS+=("MYSQL_PWD=${MYSQL_PASSWORD} mysql -u ${MYSQL_USER} ${MYSQL_DATABASE}")
    else
        sail_is_not_running
    fi

# Initiate a Bash shell within the application container...
elif [ "$1" == "shell" ] || [ "$1" == "bash" ]; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=("$APP_SERVICE" bash "$@")
    else
        sail_is_not_running
    fi

# Initiate a Redis CLI terminal session within the "redis" container...
elif [ "$1" == "redis" ] ; then
    shift 1

    if [ "$EXEC" == "yes" ]; then
        ARGS+=(exec)
        [ ! -t 0 ] && ARGS+=(-T)
        ARGS+=(redis redis-cli)
    else
        sail_is_not_running
    fi

# Pass unknown commands to the "docker-compose" binary...
else
    # If the TiDB usage flag is true,  add the profile option.
    export USE_LOCAL_TIDB=${USE_LOCAL_TIDB:-true}
    if [ "$USE_LOCAL_TIDB" == "true" ]; then
        ARGS+=("--profile")
        ARGS+=("local")
    fi
    ARGS+=("$@")
fi

# Run Docker Compose with the defined arguments...
echo "${DOCKER_COMPOSE[@]}" "${ARGS[@]}"
"${DOCKER_COMPOSE[@]}" "${ARGS[@]}"
EXIT_CODE=$?

# -----------------------------------------------------------------------------
# migrate コマンド実行後に DDL エクスポートを自動実行
# （環境チェックは db:export-ddl コマンド内で行われる）
# -----------------------------------------------------------------------------
# DDLに変更を加えるmigrateコマンドのみ対象
# - migrate:status, migrate:install は対象外
DDL_CHANGING_COMMANDS="migrate migrate:fresh migrate:refresh migrate:reset migrate:rollback"

if [ $EXIT_CODE -eq 0 ]; then
    ORIGINAL_ARGS="$*"
    SHOULD_EXPORT=false

    for cmd in $DDL_CHANGING_COMMANDS; do
        if [[ "$ORIGINAL_ARGS" =~ (^|[[:space:]])$cmd($|[[:space:]]) ]]; then
            SHOULD_EXPORT=true
            break
        fi
    done

    if [ "$SHOULD_EXPORT" = true ]; then
        # DDLエクスポート実行（対象外環境ではコマンド側で何も出力せず終了する）
        # エラーが発生しても元のコマンドの実行結果には影響させない
        "${DOCKER_COMPOSE[@]}" exec -T "$APP_SERVICE" php artisan db:export-ddl 2>/dev/null || true
    fi
fi

exit $EXIT_CODE
